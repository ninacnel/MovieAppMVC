@model MovieApp.ViewModels.MovieViewModel

@{
    ViewData["Title"] = "Modify Movie";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ModifyMovie" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Summary"></label>
        <textarea asp-for="Summary" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Actors"></label>
        @foreach (var actor in Model.Actors)
        {
            <input asp-for="Actors" class="form-control" value="@actor" />
        }
        <small class="form-text text-muted">Enter actor names separated by commas.</small>
    </div>
    <button type="submit" class="btn btn-primary">Modify Movie</button>
</form>